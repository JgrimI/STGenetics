@page "/"
@using System.Collections.Generic
@inject NavigationManager NavigationManager
@inject ILoadingService LoadingService

<PageTitle>Welcome to Animal Management System</PageTitle>

<div class="container mt-5">
    <div class="jumbotron">
        <h1 class="display-4">Hello, Animal Lovers!</h1>
        <p class="lead">Welcome to your new Animal Management Application.</p>
        <hr class="my-4">
        <p>Explore a wide range of functionalities to manage your animal database efficiently.</p>
        <button class="btn btn-primary btn-lg" @onclick="NavigateToAnimals">Manage Animals</button>
    </div>
</div>

@code {
    private void NavigateToAnimals()
    {
        NavigationManager.NavigateTo("/animals");
    }
}
